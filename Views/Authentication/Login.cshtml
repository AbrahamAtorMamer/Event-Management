
@model Event_Mangement.Models.User
@{
    Layout = "~/Views/Shared/_LayoutUserPanel.cshtml";
}

@section styles{
    <!-- Bootstrap CSS -->
    
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f5f5f5;
        }

        .login-container {
            margin-top: 100px;
        }
    </style>
}

@section body{
    <center>
        <br />
        <br />
        <br />
        <br />
        <br />
        <!-- Login Form -->
        <div class="container login-container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">Login</div>
                        <div class="card-body">
                            @using (Html.BeginForm("Login", "Authentication", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Email)
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", required = "required" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Password)
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", required = "required" })
                                </div>
                                <button type="submit" class="btn btn-primary">Sign In</button>
                                <p class="mt-2">Don't have an account? <a href="@Url.Action("Registration", "Authentication")">Create an account</a></p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <br />
        <br />
        <br />
        <br />
        <br />
    </center>

}

@section scripts{
    <!-- Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
}
